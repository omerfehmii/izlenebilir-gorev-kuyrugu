{
  "id": null,
  "uid": "executive-operations",
  "title": "Executive Operations Dashboard",
  "tags": ["executive", "operations", "kpi", "business"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 27,
  "time": {
    "from": "now-4h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["30s", "1m", "5m", "15m", "30m"],
    "time_options": ["30m", "1h", "4h", "12h", "24h", "2d", "7d"]
  },
  "templating": {
    "list": [
      {
        "name": "interval",
        "type": "interval",
        "label": "Time Range",
        "query": "1m,5m,15m,30m,1h",
        "current": {"selected": true, "text": "5m", "value": "5m"},
        "auto": true,
        "auto_count": 30,
        "auto_min": "1m"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Tasks Completed",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(increase(consumer_tasks_processed_total{status=\"success\"}[$interval]))",
          "legendFormat": "Tasks Completed",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 10,
      "title": "Hourly Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(consumer_tasks_processed_total{status=\"success\"}[$interval])) * 3600",
          "legendFormat": "Hourly Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "green", "value": 200}
            ]
          },
          "unit": "reqps",
          "decimals": 0
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 11,
      "title": "Success Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "(sum(rate(consumer_tasks_processed_total{status=\"success\"}[$interval])) / (sum(rate(consumer_tasks_processed_total{status=\"success\"}[$interval])) + sum(rate(consumer_tasks_processed_total{status=\"failed\"}[$interval])))) * 100",
          "legendFormat": "Success Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 95},
              {"color": "green", "value": 99}
            ]
          },
          "unit": "percent",
          "decimals": 1,
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 12,
      "title": "P95 Latency",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(consumer_task_processing_duration_seconds_bucket[$interval])) by (le))",
          "legendFormat": "P95 Latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 30}
            ]
          },
          "unit": "s",
          "decimals": 2
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 2,
      "title": "System Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"producer\"}",
          "legendFormat": "Producer",
          "refId": "A"
        },
        {
          "expr": "up{job=\"consumer\"}",
          "legendFormat": "Consumer",
          "refId": "B"
        },
        {
          "expr": "sum(consumer_active_tasks)",
          "legendFormat": "Active Tasks",
          "refId": "C"
        },
        {
          "expr": "sum(increase(consumer_dead_letter_queue_total[$interval]))",
          "legendFormat": "Failed Tasks",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 10}
            ]
          },
          "unit": "short",
          "decimals": 0
        },
        "overrides": [
          {
            "matcher": {"id": "byRegexp", "options": "/(Producer|Consumer)/"},
            "properties": [
              {"id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  {"color": "red", "value": null},
                  {"color": "green", "value": 1}
                ]
              }},
              {"id": "mappings", "value": [
                {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
                {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
              ]}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Failed Tasks (1h)"},
            "properties": [
              {"id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  {"color": "green", "value": null},
                  {"color": "yellow", "value": 3},
                  {"color": "red", "value": 10}
                ]
              }}
            ]
          }
        ]
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 4}
    },
    {
      "id": 3,
      "title": "Task Processing Trend",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(consumer_tasks_processed_total{status=\"success\"}[$interval])) * 60",
          "legendFormat": "Successful Tasks/min",
          "refId": "A"
        },
        {
          "expr": "sum(rate(consumer_tasks_processed_total{status=\"failed\"}[$interval])) * 60",
          "legendFormat": "Failed Tasks/min",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never",
            "stacking": {"mode": "none"}
          },
          "color": {"mode": "palette-classic"},
          "unit": "reqps",
          "min": 0
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Successful Tasks/min"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Failed Tasks/min"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
            ]
          }
        ]
      },
      "options": {
        "tooltip": {"mode": "multi", "sort": "desc"},
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10}
    },
    {
      "id": 4,
      "title": "Performance Overview",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(consumer_task_processing_duration_seconds_bucket[$interval])) by (le))",
          "legendFormat": "P50 Response Time",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(consumer_task_processing_duration_seconds_bucket[$interval])) by (le))",
          "legendFormat": "P95 Response Time",
          "refId": "B"
        },
        {
          "expr": "avg(consumer_queue_wait_time_seconds)",
          "legendFormat": "Avg Queue Wait Time",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "color": {"mode": "palette-classic"},
          "unit": "s",
          "min": 0
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "P95 Response Time"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Avg Queue Wait Time"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}
            ]
          }
        ]
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10}
    },
    {
      "id": 5,
      "title": "Task Type Distribution (Last Hour)",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum(increase(consumer_tasks_processed_total{status=\"success\"}[$interval])) by (task_type)",
          "legendFormat": "{{task_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "donut",
        "tooltip": {"mode": "single", "sort": "none"},
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "percent"],
          "values": ["value", "percent"]
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 18}
    },
    {
      "id": 6,
      "title": "Error Rate Alert",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(consumer_task_errors_total[$interval])) * 60",
          "legendFormat": "Errors/min",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "orange", "value": 3},
              {"color": "red", "value": 5}
            ]
          },
          "unit": "reqps",
          "decimals": 2
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 18}
    },
    {
      "id": 7,
      "title": "Queue Backlog",
      "type": "stat",
      "targets": [
        {
          "expr": "max(consumer_queue_wait_time_seconds)",
          "legendFormat": "Max Wait Time",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 60},
              {"color": "orange", "value": 300},
              {"color": "red", "value": 600}
            ]
          },
          "unit": "s",
          "decimals": 0
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 18}
    },
    {
      "id": 8,
      "title": "System Alerts",
      "type": "stat",
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\", alertname=~\".*Task.*|.*Consumer.*|.*Producer.*\"}",
          "legendFormat": "Active Alerts",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 3}
            ]
          },
          "unit": "short",
          "decimals": 0,
          "noValue": "0"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 22}
    },
    {
      "id": 9,
      "title": "Capacity Planning",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(consumer_tasks_processed_total{status=\"success\"}[$interval])) * 24 * 3600",
          "legendFormat": "Daily Capacity",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 22}
    }
  ],
  "annotations": {
    "list": [
      {
        "name": "Critical Alerts",
        "enable": true,
        "iconColor": "rgba(255, 96, 96, 1)",
        "query": "ALERTS{alertstate=\"firing\", severity=\"critical\"}",
        "titleFormat": "🚨 {{alertname}}",
        "textFormat": "{{summary}}: {{description}}"
      }
    ]
  },
  "links": [
    {
      "icon": "external link",
      "tags": ["detailed"],
      "title": "Detailed Analytics",
      "tooltip": "Open Advanced Task Queue Dashboard",
      "type": "dashboards",
      "url": "/d/advanced-task-queue"
    },
    {
      "icon": "external link",
      "tags": ["simple"],
      "title": "Simple Overview", 
      "tooltip": "Open Simple Task Queue Dashboard",
      "type": "dashboards",
      "url": "/d/simple-task-queue"
    },
    {
      "icon": "external link",
      "tags": ["jaeger"],
      "title": "Trace Analysis",
      "tooltip": "Open Jaeger for detailed tracing",
      "type": "link",
      "url": "http://localhost:16686"
    },
    {
      "icon": "external link",
      "tags": ["producer"],
      "title": "Task Creator",
      "tooltip": "Open Producer Web UI",
      "type": "link", 
      "url": "http://localhost:8080"
    }
  ]
} 