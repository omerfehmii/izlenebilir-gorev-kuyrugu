{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "admin",
    "Password": "admin123",
    "VirtualHost": "/",
    "Queues": {
      "ReportGeneration": "report-queue",
      "DataProcessing": "data-queue", 
      "EmailNotification": "email-queue",
      "FileProcessing": "file-queue",
      "DatabaseCleanup": "cleanup-queue",
      "Default": "task-queue"
    },
    "Exchange": {
      "Name": "task-exchange",
      "Type": "direct"
    },
    "DeadLetterQueue": {
      "Name": "dlq-queue",
      "Exchange": "dlq-exchange"
    }
  },
  "AIService": {
    "BaseUrl": "http://localhost:5178",
    "TimeoutMs": 10000,
    "EnableBatching": false,
    "BatchSize": 10,
    "EnableFallback": true,
    "RetryCount": 2
  },
  "OpenTelemetry": {
    "ServiceName": "producer-app",
    "ServiceVersion": "2.0.0-ai-optimized",
    "JaegerEndpoint": "http://jaeger:14268/api/traces"
  },
  "Application": {
    "Port": 8081,
    "AutoSendTasks": true,
    "AutoSendInterval": 8000,
    "MaxRetryAttempts": 3
  },
  "AllowedHosts": "*"
}
